# Comedy Genius Analytics Environment Configuration
# Copy this file to .env and update with your values

# =====================================
# Database Configuration
# =====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cg_analytics
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# =====================================
# Authentication & Security
# =====================================
# Generate a secure JWT secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# =====================================
# Redis Configuration (for job queues)
# =====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =====================================
# Server Configuration
# =====================================
PORT=5000
NODE_ENV=development
# NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
# FRONTEND_URL=https://yourdomain.com

# =====================================
# Admin Account (for create-admin script)
# =====================================
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=SecurePassword123!

# =====================================
# File Upload Configuration
# =====================================
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=./uploads

# =====================================
# Logging Configuration
# =====================================
LOG_LEVEL=info
# LOG_LEVEL=debug
LOG_DIR=./logs

# =====================================
# Email Configuration (optional)
# =====================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@comedygenius.tv

# =====================================
# External Services (optional)
# =====================================
# Facebook API (future feature)
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=
# FACEBOOK_ACCESS_TOKEN=

# YouTube API (future feature)
# YOUTUBE_API_KEY=

# =====================================
# Performance & Optimization
# =====================================
# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Bull Queue concurrency
QUEUE_CONCURRENCY=5

# =====================================
# Development Settings
# =====================================
# Enable detailed error messages in development
DEBUG=false

# Disable SSL in development
DB_SSL=false

# =====================================
# Production Settings
# =====================================
# Enable these in production:
# SECURE_COOKIES=true
# TRUST_PROXY=true
# DB_SSL=true
# FORCE_HTTPS=true

# SSL Certificate paths (for HTTPS server)
# SSL_KEY_PATH=/path/to/private.key
# SSL_CERT_PATH=/path/to/certificate.crt

# =====================================
# Feature Flags
# =====================================
ENABLE_API_KEYS=true
ENABLE_AUDIT_LOGS=true
ENABLE_RATE_LIMITING=true
ENABLE_FILE_UPLOADS=true

# =====================================
# Rate Limiting
# =====================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # per window
API_RATE_LIMIT_MAX=1000      # for API key users

# =====================================
# Session Configuration
# =====================================
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# =====================================
# Monitoring (optional)
# =====================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# DataDog APM
# DD_AGENT_HOST=localhost
# DD_TRACE_AGENT_PORT=8126